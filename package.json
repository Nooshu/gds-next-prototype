{
    "name": "hmcts-gds-next-prototype",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "next dev -p 3000",
        "build": "npm run copy:govuk-assets && next build --webpack",
        "copy:govuk-assets": "node scripts/copy-govuk-assets.mjs",
        "start": "node scripts/build-and-start.mjs",
        "start:safe": "node scripts/build-and-start.mjs",
        "lint": "next lint",
        "test:automated:axe": "node axe-test.cjs",
        "test:automated:lighthouse": "node lighthouse-test.cjs",
        "test:automated:playwright": "npx playwright test",
        "verify:dependencies": "node scripts/verify-dependencies.mjs",
        "verify:dependencies:verbose": "node scripts/verify-dependencies.mjs --verbose",
        "postinstall": "npm run copy:govuk-assets"
    },
    "dependencies": {
        "next": "16.0.3",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "govuk-frontend": "5.13.0",
        "@ministryofjustice/frontend": "7.1.0",
        "sass": "1.94.2"
    },
    "devDependencies": {
        "typescript": "5.9.3",
        "@types/node": "24.10.1",
        "@types/react": "19.2.6",
        "@types/react-dom": "19.2.3",
        "eslint": "9.39.1",
        "eslint-config-next": "16.0.3",
        "@axe-core/puppeteer": "4.11.0",
        "puppeteer": "24.31.0",
        "lighthouse": "13.0.1",
        "chrome-launcher": "1.2.1"
    },
    "overrides": {
        "rimraf": "6.1.0",
        "glob": "11.1.0",
        "@humanwhocodes/config-array": "npm:@eslint/config-array@0.21.1",
        "@humanwhocodes/object-schema": "npm:@eslint/object-schema@2.1.7"
    }
}
