{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": ["local>hmcts/.github:renovate-config"],

  "dependencyDashboard": true,

  "prConcurrentLimit": 1,
  "prHourlyLimit": 1,

  "labels": ["dependencies", "renovate"],

  "assignees": ["Nooshu"],
  "reviewers": ["Nooshu"],

  "enabledManagers": ["github-actions", "npm", "nvm"],

  "lockFileMaintenance": {
    "enabled": false
  },

  "packageRules": [
    {
      "description": "Bundle all minor and patch dependency updates for manual review",
      "groupName": "All dependencies",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false,
      "labels": ["dependencies", "manual-review"]
    },
    {
      "description": "Require manual review for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major", "manual-review"]
    }
  ],

  "ignoreDeps": ["msw", "@babel/plugin-proposal-class-properties"],

  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "vulnerability"],
    "assignees": ["Nooshu"]
  },

  "npm": {
    "rangeStrategy": "pin"
  }
}
